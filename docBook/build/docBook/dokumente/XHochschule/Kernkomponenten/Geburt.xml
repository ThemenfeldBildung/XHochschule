            <row>
               <entry namest="indent0" nameend="child">
                  <emphasis role="bold">datum</emphasis>
               </entry>
               <entry>
                  <emphasis role="codebf">TeilbekanntesDatum</emphasis>
               </entry>
               <entry>
                  <emphasis role="bold">0..1</emphasis>
               </entry>
