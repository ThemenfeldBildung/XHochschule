   <section>
      <title>Geschäftsregeln</title>
      <informaltable xml:id="table.XHochschule.Bescheinigungen.immatrikulationsbescheinigung.rules">
         <tgroup cols="2">
            <colspec colname="id" colnum="1" colwidth="20mm"/>
