	<section xml:id="spezifikation.abschlussbekanntgabe.abschlussbekanntgabe">
		<info>
			<title>Hochschulabschulabschluss bekanntgeben</title>
		</info>
		<variablelist>
			<varlistentry>
				<term>Beteiligte Stellen an der Datenübermittlung</term>
				<listitem>
					<para>
						<orderedlist>
							<listitem>
								<para><emphasis role="bold">Abschlussdaten Anfrage</emphasis></para>
								<itemizedlist>
									<listitem>
										<para>Hochschule (Sender)</para>
									</listitem>
									<listitem>
										<para>Studierender (Empfänger)</para>
									</listitem>
								</itemizedlist>
							</listitem>
							<listitem>
								<para><emphasis role="bold">Abschlussdaten Antwort</emphasis></para>
								<itemizedlist>
									<listitem>
										<para>Studierender (Sender)</para>
									</listitem>
									<listitem>
